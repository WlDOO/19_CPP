{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug PmergeMe",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/ex02/PmergeMe", // Chemin vers l'exécutable
            "args": ["10", "20", "30", "40", "50"], // Arguments de test
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/ex02", // Répertoire de travail
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "build"
        }
    ]
}